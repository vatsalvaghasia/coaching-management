<div class="container m-cust p-5">
<h2 class="text-center">Edit Your Profile</h2>
<hr class="custom-hr">
<div class="row">
    <div class="col-lg-6 m-auto edit-acc-img p-5">
<%= form_for(resource1, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "teachers/shared/error_messages", resource: resource1 %>

  <div class="form-group">
    <%= f.label :email ,class:'font-weight-bold' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource1.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource1.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password ,class:'font-weight-bold'%> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class:'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation,class:'font-weight-bold' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password,class:'font-weight-bold' %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class:'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Update",class:'btn btn-warning mt-3 mb-3' %>
  </div>
<% end %>

<h3>Permanently Delete Account?</h3>

<%= button_to "Deactivate my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:'btn btn-danger' %>

<%= link_to "Back", :back ,class:'btn btn-primary mt-3'%>
</div>
</div>
</div>