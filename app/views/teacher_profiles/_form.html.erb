<%= form_with(model: teacher_profile) do |form| %>
  <% if teacher_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(teacher_profile.errors.count, "error") %> prohibited this teacher_profile from being saved:</h2>

      <ul>
        <% teacher_profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :"Upload Profile Picture" ,class:'font-weight-bold'%>
    <%= form.file_field :avatar,class:'form-control'%>
  </div>

  <div class="form-group">
    <%= form.text_field :name,class:'form-control',placeholder:'Name' %>
  </div>

  <div class="form-group">
    <%= form.text_field :email,class:'form-control',placeholder:'Email' %>
  </div>

  <div class="form-group">
    <%= form.text_field :experience,class:'form-control',placeholder:'Years of Experience' %>
  </div>
  <div class="form-group">
    <%= form.text_field :subject,class:'form-control',placeholder:'Subject' %>
  </div>

  <div class="form-group">
    <%= form.label :mode_to_teach ,class:'mr-5'%>
    <%= form.check_box :mode_to_teach ,id:'check'%>
    <%= form.label 'Online' ,for:'check'%>
    <small class="form-text text-muted">(Check the box if mode of teaching is online else default is offline)</small>
  </div>

  <div class="actions">
    <%= form.submit 'Upload Profile',class:'btn btn-primary' %>
  </div>
<% end %>
