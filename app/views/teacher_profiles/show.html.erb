<div class="container float-right">
  <p id="notice"><%= notice %></p>
  <h1 class="text-center">Teacher Profile Details</h1>
  <div class="row mt-3">
<table class="col-6 m-auto table table-bordered table-striped">
  <thead>
    <td colspan="2" class="text-center"><%= image_tag @teacher_profile.avatar,:width => '150',:height=>'200' ,class:'mt-3' %></td>  
  </thead>
  <tbody>
    <tr class="thead-dark">
      <th class="text-center">Label</th>
      <th class="text-center">Details</th>
    <tr>
      <td><strong>Name</strong></td>
      <td><%= @teacher_profile.name %></td>
    </tr>
    <tr>
      <td><strong>Email</strong></td>
      <td><%= @teacher_profile.email %></td>
    </tr>
    <tr>
      <td><strong>Experience</strong></td>
      <td><%= @teacher_profile.experience %> Years <% if @teacher_profile.exp_months != 0 %> <%= @teacher_profile.exp_months %> Months <% end %> </td>
    </tr>
    <tr>
      <td><strong>Subject</strong></td>
      <td><%= @teacher_profile.subject %></td>
    </tr>
    <tr>
      <td><strong>Mode of Teaching</strong></td>
      <td><% if @teacher_profile.mode_to_teach %>Online <% else %>Offline<% end %></td>
    </tr>
  </tbody>
</table>
</div>

<div class="row mt-4">
  <div class="m-auto">
  <% if has_role(:admin) %>
    <%= link_to 'Edit', edit_teacher_profile_path(@teacher_profile), class:'btn btn-success' %> |
  <% end %>
<%= link_to 'Back', teacher_profiles_path,class:'btn btn-primary mb-3'  %>  
  </div> 
</div>
</div>
